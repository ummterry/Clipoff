<Window x:Class="Clipoff.Utility.TwitterLoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TwitterLoginDialog" Height="500" Width="600" Loaded="Window_Loaded" Icon="/ClipoffKernel;component/Images/1.ico">
    <Grid>
        <WebBrowser x:Name="webBrowser" Margin="0,0,0,38"></WebBrowser>
        <TextBox x:Name="txtPin" HorizontalAlignment="Right" Height="23" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="102" Margin="0,0,70,10"/>
        <Button x:Name="btnOK" Content="OK" VerticalAlignment="Bottom" Width="40" Margin="0,0,20,10" Click="btnOK_Click" HorizontalAlignment="Right"/>
        <Label Content="Enter your account in the webpage above and write the PIN code here:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="386"/>
    </Grid>
</Window>
