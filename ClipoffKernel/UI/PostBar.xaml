<UserControl x:Class="Clipoff.UI.PostBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="textBox" Margin="0, 2" Grid.Row="0" Width="150" Height="75" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBox>
        <Grid Grid.Row="1">
            <TextBlock VerticalAlignment="Center">Press Enter to Send</TextBlock>
            <Button VerticalAlignment="Center" HorizontalAlignment="Right" Width="30" Content="Send" Click="Button_Click_Send"/>
        </Grid>
    </Grid>
</UserControl>
